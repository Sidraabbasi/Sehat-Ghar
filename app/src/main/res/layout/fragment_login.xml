<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:fillViewport="true"
            android:isScrollContainer="true"
            >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F2f5f5f5">
        <ImageView
            android:layout_width="match_parent"
            android:src="@drawable/login_bg"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_gravity="center_horizontal|center_vertical"
            android:orientation="vertical">


            <TextView
                android:id="@+id/loginHeading1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="25dp"
                android:textColor="@color/font_color_primary"
                android:text="Welcome to" />
            <TextView
                android:id="@+id/loginHeading2"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="35dp"
                android:textColor="@color/font_color_primary"
                android:text="Sehat Ghar!" />
            <TextView
                android:id="@+id/loginHeading"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:textColor="@color/font_color_primary"
                android:text="Login" />


                <EditText
                    android:id="@+id/login_username_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:padding="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/text_box_round"
                    android:layout_marginLeft="@dimen/padding_large"
                    android:layout_marginRight="@dimen/padding_large"
                    android:hint="@string/login_username_title"
                    android:nextFocusDown="@+id/login_password_field"
                    android:inputType="text"/>

                <EditText
                    android:id="@+id/login_password_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:padding="15dp"
                    android:background="@drawable/text_box_round"
                    android:layout_marginLeft="@dimen/padding_large"
                    android:layout_marginRight="@dimen/padding_large"
                    android:hint="@string/login_password_title"
                    android:inputType="textPassword"/>

            <Button
                android:id="@+id/forgot_btn"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/font_color_primary"
                android:layout_marginLeft="@dimen/padding_large"
                android:layout_marginRight="@dimen/padding_large"
                android:text="@string/title_btn_reset"/>


            <ImageButton
                android:id="@+id/login_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/login_btn"
                android:background="@null"
                android:layout_gravity="center_horizontal"
                android:theme="@style/PrimaryButton"/>

            <TextView
                android:id="@+id/dont_have_account"
                style="@style/SubheaderText"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/padding_large"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:autoText="true"
                android:gravity="center"
                android:text="@string/login_dont_have_account"
                android:visibility="gone" />

            <Button
                android:id="@+id/register_btn"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_large"
                android:layout_marginRight="@dimen/padding_large"
                android:text="@string/title_register"
                />
        </LinearLayout>
    </FrameLayout>

</ScrollView>